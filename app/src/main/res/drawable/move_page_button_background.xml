<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">

        <shape>

            <solid android:color="@color/pressed_button_background" />
            <stroke android:width="1sp" android:color="@color/button_stroke_color" />

        </shape>

    </item>

    <item>

        <shape>

            <solid android:color="@color/not_pressed_button_background" />
            <stroke android:width="1sp" android:color="@color/button_stroke_color" />

        </shape>

    </item>

</selector>