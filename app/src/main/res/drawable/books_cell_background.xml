<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>


            <solid android:color="@color/pressed_books_cell_background_color" />

            <stroke android:width="0.5dp" android:color="@color/stroke_color" />

        </shape>

    </item>

    <item>

        <shape>


            <solid android:color="@color/not_pressed_books_cell_background_color" />

            <stroke android:width="0.5dp" android:color="@color/stroke_color" />

        </shape>

    </item>



</selector>